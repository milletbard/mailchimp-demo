  <title>Newsletter Signup</title>
</head>

<body>
  <div class="container users-lists">
    <section class="row mt-5 text-center">
      <div style="width: 100%;" class="m-auto" style="display: flex;
             flex-direction: column;
             align-items: center;">
        <h1><i class="fas fa-newspaper fa-2x"></i></h1>
        <h1 class="display-4">Audiences Lists</h1>
        <!-- <p class="lead">
          Enter your info to get our awesome monthly newsletter
        </p> -->

        <button onclick="routePush('/add')" class="button">+</button>

        <table>
          <tr>

            <th>Email Address</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
          </tr>

          <% items.forEach(function(item) { %>
          <tr>

            <td data-th="Email Address"><%= item.campaign_defaults.from_email %></td>
            <td data-th="Name"><%= item.name %></td>
            <td data-th="Address">
              <%= item.contact.company %>,
              <%= item.contact.address1 %>,
              <%= item.contact.address2 %>,
              <%= item.contact.city %>,
              <%= item.contact.zip %>,
              <%= item.contact.country %>
            </td>
            <td data-th=""> <%= item.contact.phone %></td>

          </tr>
          <% }); %>

